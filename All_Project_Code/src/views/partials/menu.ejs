<header>
  <nav class="navbar navbar-expand-sm border-bottom">
    <div class="container">
      <!-- Bold Company Title -->
      <span class="navbar-brand fw-bold">SkineeDipping</span>

      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-collapse"
        aria-controls="navbar"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="navbar-nav me-auto">
          <% /* Only show Home and Discover if not on login or register page */ %>
          <% if (pageType !== 'login' && pageType !== 'register') { %>
            <!-- Home tab -->
            <li class="nav-item" id="nav-home">
              <a class="nav-link" href="/home">Home</a>
            </li>
            <!-- Discover tab -->
            <li class="nav-item" id="nav-discover">
              <a class="nav-link" href="/discover">Discover</a>
            </li>
          <% } %>
        </ul>
        <% /* Only show User dropdown if not on login or register page */ %>
        <% if (pageType !== 'login' && pageType !== 'register') { %>
          <!-- User and Logout in dropdown on the right -->
          <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                User
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <!-- Logout tab, as a dropdown item -->
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </li>
          </ul>
        <% } %>
      </div>
    </div>
  </nav>
</header>
